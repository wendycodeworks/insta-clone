<p id="notice"><%= notice %></p>

<div class="columns">

  <div class="column">
    <%= render  "users" %>

    <h1>Posts</h1>

    <% @posts.each do |post| %>

    <% post.images.each do |image| %>
    <%= image_tag(image) %>
    <% end %>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

    <% end %>
    <br>

    <%= link_to 'New Post', new_post_path %>
  </div>

  <div class="column">
    <%= render  "shared/sidebar" %>
  </div>

</div>