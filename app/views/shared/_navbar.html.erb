          <button class="button is-light">
            <%= link_to edit_user_registration_path do %>
            <%= image_tag(current_user.avatar_attachment_path) %>
            <%= current_user.email %>
            <% end %>
          </button>
          <button class="button is-light"><%= link_to  "Sign Out", destroy_user_session_path, method: :delete %></button>
        </div>
      </div>
